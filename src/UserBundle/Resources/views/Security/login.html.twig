{% extends 'UserBundle::layout.html.twig' %}


{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <section class="row">
        <form class="col-sm-6 col-md-5 col-lg-4 col-xl-3 mx-auto" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
            
            {% if error %}
                <div class="form-group text-center error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label class="align-middle" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class="form-group text-center">
                <input class="btn btn-secondary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </form>
    </section>
{% endblock fos_user_content %}